{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "jQuery": true,
    "SVGInjector": true,
    "moment": true,
    "_": true,
    "EventEmitter": true,
    "ee": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": 0,
    "no-console": 0
  }
}
