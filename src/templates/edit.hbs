<h1>Edit Note</h1>

<form id="form-note-edit">
  <div class="form-row">
    <label for="title">Title</label> <input type="text" id="title" name="title" value="{{ title }}" required>
  </div>
  <div class="form-row">
    <label for="description">Description</label>
    <textarea name="" id="description" name="description" cols="30" rows="10" required>{{ description }}</textarea>
  </div>
  <div class="form-row">
    <label for="priority">Priority</label>
    <ul id="list-priority" class="priority">
      <li><a href=""><i class="fa fa-bolt fa-3x" aria-hidden="true"></i></a></li>
      <li><a href=""><i class="fa fa-bolt fa-3x" aria-hidden="true"></i></a></li>
      <li><a href=""><i class="fa fa-bolt fa-3x" aria-hidden="true"></i></a></li>
      <li><a href=""><i class="fa fa-bolt fa-3x" aria-hidden="true"></i></a></li>
      <li><a href=""><i class="fa fa-bolt fa-3x" aria-hidden="true"></i></a></li>
    </ul>
    <input type="hidden" id="priority" value="{{ priority }}" required/>
  </div>
  <div class="form-row">
    <label for="created">Created on</label><input type="text" id="created" class="datepicker" name="created" value="{{formatDate created }}" required>
  </div>
  <div class="form-row">
    <label for="due">Due by</label><input type="text" id="due" class="datepicker" name="due" value="{{formatDate due }}" required>
  </div>
  <div class="form-row">
    <label for="item-finished">Finished?</label> <input type="checkbox" id="item-finished" data-id="{{ _id }}" {{#if finished }} checked{{/if}}>
  </div>
  <div class="form-row">
    <label for="finished-on">Finished on</label><input type="text" id="finished-on" name="finished-on" value="{{formatDate finishedOn }}" disabled>
  </div>
  <div class="btn-group">
    <a href="" id="note-delete" class="btn btn-danger">Delete Note</a>
    <a href="#home" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>

